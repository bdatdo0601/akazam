{
    "plugins": ["prettier"],
    "extends": ["plugin:prettier/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "tabWidth": 4,
                "arrowParens": "avoid",
                "trailingComma": "es5"
            }
        ],
        "indent": ["error", 4]
    }
}
